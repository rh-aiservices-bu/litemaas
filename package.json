{
  "name": "litemaas",
  "version": "0.1.2",
  "description": "LiteLLM User Application - Model subscription and management platform",
  "private": true,
  "workspaces": [
    "backend",
    "frontend"
  ],
  "scripts": {
    "dev": "concurrently --names \"backend,frontend\" --prefix-colors \"magenta,green\" \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:logged": "concurrently --names \"backend,frontend\" --prefix-colors \"magenta,green\" \"npm run dev:backend:logged\" \"npm run dev:frontend:logged\"",
    "dev:backend": "npm run dev:logged --workspace=backend",
    "dev:frontend": "npm run dev:logged --workspace=frontend",
    "dev:backend:logged": "npm run dev --workspace=backend",
    "dev:frontend:logged": "npm run dev --workspace=frontend",
    "check-backend": "node scripts/check-backend.js",
    "build": "npm run build --workspaces",
    "build:containers": "./scripts/build-containers.sh",
    "build:containers:push": "./scripts/build-containers.sh --build-and-push --no-cache",
    "push:containers": "./scripts/build-containers.sh --push",
    "test": "npm run test --workspaces",
    "lint": "npm run lint --workspaces",
    "format": "prettier --write \"{docs/**,deployment/**,dev-tools/**,*.{js,jsx,ts,tsx,json,css,scss,md}}\"",
    "clean": "npm run clean --workspaces && rimraf node_modules",
    "logs:backend": "tail -f logs/backend.log",
    "logs:frontend": "tail -f logs/frontend.log",
    "logs:all": "tail -f logs/*.log",
    "logs:clear": "rm -rf logs/*.log"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "rimraf": "^5.0.5",
    "vitest": "1.6.1",
    "typescript": "^5.8.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
