apiVersion: kustomize.config.k8s.io/v1beta1
kind: Kustomization

# Namespace configuration - change this to deploy to a different namespace
namespace: ${NAMESPACE}

# Resources to deploy
resources:
  # Namespace
  - namespace.yaml.local

  # Secrets (must be created/customized before deployment)
  - postgres-secret.yaml.local
  - backend-secret.yaml.local
  - litellm-secret.yaml.local

  # PostgreSQL Database
  - postgres-init-configmap.yaml
  - postgres-statefulset.yaml
  - postgres-service.yaml

  # LiteLLM AI Proxy
  - litellm-deployment.yaml
  - litellm-service.yaml

  # Backend API
  - backend-deployment.yaml.local
  - backend-service.yaml

  # Frontend Web Application
  - frontend-deployment.yaml.local
  - frontend-service.yaml

  # OpenShift Routes
  - frontend-route.yaml
  - litellm-route.yaml

# Images - can be overridden for different environments
images:
  - name: quay.io/rh-aiservice-bu/litemaas-backend
    newTag: latest
  - name: quay.io/rh-aiservice-bu/litemaas-frontend
    newTag: latest
